<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo con el efecto de sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- Color de fondo del botÃ³n -->
            <corners android:radius="16dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>

    <!-- Sombra -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#44000000" /> <!-- Color de la sombra (negro semitransparente) -->
            <corners android:radius="16dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
</layer-list>
